<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".searchTrip.MoreTripInfoActivity"
    android:orientation="vertical">
    <TextView
        android:id="@+id/trip_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/trip_start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/trip_end_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/trip_decrease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-"
        />
    <TextView
        android:id="@+id/trip_num_of_people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"/>
    <Button
        android:id="@+id/trip_increase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+"
        />
    <Button
        android:id="@+id/trip_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="送出訂單"
        android:onClick="submit"
        />

</LinearLayout>