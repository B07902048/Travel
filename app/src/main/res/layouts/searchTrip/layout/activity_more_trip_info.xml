<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".searchTrip.MoreTripInfoActivity"
    android:orientation="vertical"
    android:background="#ADC7E0">
    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#FF9900"
        android:scaleType="fitXY"
        android:src="@drawable/smile" />
    <TextView
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/trip_title"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textColor="#2F0000"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="15dp">
        <TextView
            android:textSize="25dp"
            android:id="@+id/trip_start_date"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_weight=".4"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~"
            android:textColor="#000000"
            android:textSize="25dp"
            android:layout_weight=".2"
            android:textAlignment="center"
            android:gravity="center_horizontal" />
        <TextView
            android:textSize="25dp"
            android:id="@+id/trip_end_date"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_weight=".4"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:text="Number of People: "
            android:textSize="25dp"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/trip_decrease"
            android:layout_weight=".25"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="#FDF5E6"
            android:text="-"
            android:textSize="30dp"
            />
        <TextView
            android:id="@+id/trip_num_of_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:text="0"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:gravity="center_horizontal" />
        <Button
            android:id="@+id/trip_increase"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:background="#FDF5E6"
            android:text="+"
            android:textSize="30dp"
            />
    </LinearLayout>
    <Button
        android:id="@+id/moreTripInfo_submitBtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="350dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#F5E6F8"
        android:enabled="false"
        android:onClick="submit"
        android:text="Send"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />
    <Button
        android:id="@+id/moreTripInfo_deleteBtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="#F5E6F8"
        android:onClick="delete"
        android:text="Delete"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />
</LinearLayout>